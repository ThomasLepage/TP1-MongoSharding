<html>
  <head>
    <title>Création de compte</title>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <div class="login-container">
      <h1>Créer un compte</h1>
      <form id="signupForm" class="login-form">
        <label>Prénom</label>
        <input type="text" name="firstname" required />
        
        <label>Nom</label>
        <input type="text" name="lastname" required />
        
        <label>Email</label>
        <input type="email" name="email" required />
        
        <label>Mot de passe</label>
        <input type="password" name="password" required />
        
        <label>Avatar (URL)</label>
        <input type="url" name="avatar" placeholder="https://example.com/avatar.jpg" />
        
        <button type="submit">Créer le compte</button>
      </form>
      
      <div class="signup-link">
        <p>Déjà un compte ? <a href="/">Se connecter</a></p>
      </div>
    </div>
    
    <script>
      document.getElementById("signupForm").addEventListener("submit", async (e) => {
        e.preventDefault();
        
        const formData = new FormData(e.target);
        const userData = {
          firstname: formData.get("firstname"),
          lastname: formData.get("lastname"),
          email: formData.get("email"),
          password: formData.get("password"),
          avatar: formData.get("avatar") || "https://via.placeholder.com/150"
        };
        
        try {
          const response = await fetch("/signup", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(userData),
          });
          
          if (response.ok) {
            const result = await response.json();
            if (result.success) {
              window.location.href = `/listMessage?userId=${result.userId}`;
            } else {
              document.body.innerHTML = await response.text();
            }
          } else {
            document.body.innerHTML = await response.text();
          }
        } catch (error) {
          console.error("Erreur:", error);
          alert("Une erreur est survenue lors de la création du compte.");
        }
      });
    </script>
  </body>
</html>
